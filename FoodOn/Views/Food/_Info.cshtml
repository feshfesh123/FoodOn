@model RecipeViewModel
@if (Model.Name != null)
{


    <h5 class="card-title">@Model.Name</h5>
    <h6 class="card-subtitle mb-2 text-muted">- Cooking Time : @Model.CookingTime</h6>
    <h6 class="card-subtitle mb-2 text-muted">- Meal : @Model.MealType</h6>
    <h6 class="card-subtitle mb-2 text-muted">- Course : @Model.CourseType</h6>
    <h6 class="card-subtitle mb-2 text-muted">- Ingredients List :</h6>

    <ul class="list-group">
        @foreach (var item in Model.Ingredients)
        {
            <li class="list-group-item">@item</li>
        }
    </ul>


}
